{
	"name"			: "ipub/packages",
	"type"			: "library",
	"description"	: "Extension for managing applications packages for Nette Framework.",
	"keywords"		: ["nette", "packages", "cms", "modular system", "ipub", "ipublikuj"],
	"homepage"		: "https://github.com/iPublikuj/packages",
	"license"		: ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/packages/issues"
	},

	"require": {
		"php"	: ">=7.0.0",

		"nette/di"		: "~2.3",
		"nette/utils"	: "~2.3",
		"nette/neon"	: "~2.3",

		"kdyby/console"	: "@dev",

		"composer/semver"	: "~1.4"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.3",
		"nette/mail"			: "~2.3",
		"nette/robot-loader"	: "~2.3",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "@dev",

		"tracy/tracy"	: "@dev"
	},

	"autoload": {
		"psr-0": {
			"IPub\\Packages\\": "src/"
		}
	},

	"bin": ["bin/packages-manager", "bin/packages-manager.php"]
}
