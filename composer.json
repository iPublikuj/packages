{
	"name"			: "ipub/packages",
	"type"			: "library",
	"description"	: "Extension for managing applications packages for Nette Framework.",
	"keywords"		: ["nette", "packages", "cms", "modular system", "ipub", "ipublikuj"],
	"homepage"		: "https://github.com/iPublikuj/packages",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "https://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/packages/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"packages" : "IPub\\Packages\\DI\\PackagesExtension"
				},
				"packages": {
					"path" : null,
					"dirs" : {
						"configDir" : "%appDir%/config",
						"vendorDir" : "%appDir%/../vendor",
						"tempDir" : "%tempDir%"
					},
					"configFile" : "config.neon",
					"loader" : {
						"packageFiles" : [
							"package.php"
						]
					},
					"sources" : []
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.1.0",

		"nette/di"		: "~2.4",
		"nette/utils"	: "~2.4",
		"nette/neon"	: "~2.4",

		"kdyby/console"	: "~2.7",

		"composer/semver"	: "~1.4"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.4",
		"nette/mail"			: "~2.4",
		"nette/robot-loader"	: "~2.4",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "~2.0",

		"tracy/tracy"	: "~2.4",

		"pds/skeleton"	: "~1.0"
	},

	"suggest": {
		"ipub/packages-metadata"	: "If you don't wanna care about third party extension metadata."
	},

	"autoload": {
		"psr-0": {
			"IPub\\Packages\\": "src/"
		}
	},

	"bin": ["bin/packages-manager", "bin/packages-manager.php"]
}
